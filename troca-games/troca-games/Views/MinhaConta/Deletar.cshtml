@model troca_games.Models.Usuario

@{
    ViewData["Title"] = "Deletar Conta";
}

<h2>Deletar Conta</h2>

<h4>Tem certeza que deseja deletar essa conta?</h4>
<br />
<form asp-action="Deletar">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Deletar" class="btn btn-outline-danger" />
    <a asp-action="Index" class="btn btn-danger">Cancelar</a>
</form>
