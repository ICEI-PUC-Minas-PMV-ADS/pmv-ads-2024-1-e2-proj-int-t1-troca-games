@model troca_games.Models.Jogo

@{
    ViewData["Title"] = "Cancelar Reserva";

    <style>
        body {
            background-color: rgb(248,248,248);
            font-family: Verdana;
        }
    </style>
}

<h1 style="font-size:30px">Cancelar Reserva</h1>

<h2 style="font-size:18px">Tem certeza que deseja cancelar a Reserva do Jogo?</h2>

<form asp-action="CancelarReserva" style="margin-top:-12px">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <input type="hidden" value="@Model.Nome" id="Nome" name="Nome" required class="form-control" style="font-size:14px" />
    </div>
    <div class="form-group">
        <input type="hidden" value="@Model.Console" id="Console" name="Console" required class="form-control" style="font-size:14px" />
    </div>
    <div class="form-group">
        <input type="hidden" value="@Model.NegociacaoJogo" id="NegociacaoJogo" name="NegociacaoJogo" required class="form-control" style="font-size:14px" />
    </div>
    <div class="form-group">
        <input type="hidden" value="@Model.CondicaoJogo" id="CondicaoJogo" name="CondicaoJogo" required class="form-control" style="font-size:14px" />
    </div>
    <div class="form-group">
        <input type="hidden" value="@Model.Valor" id="Valor" name="Valor" required class="form-control" style="font-size:14px" />
    </div>
    <div class="form-group">
        <input type="hidden" value="@Model.Vendedor" id="Vendedor" name="Vendedor" required class="form-control" style="font-size:14px" />
    </div>
    <div class="form-group">
        <input type="hidden" value="@Model.Email" id="Email" name="Email" required class="form-control" style="font-size:14px" />
    </div>
    <div class="form-group">
        <input type="hidden" value="0" id="Status" name="Status" required class="form-control" style="font-size:14px" />
    </div>
    <div class="form-group">
        <input type="hidden" value="@Model.Comprador" id="Comprador" name="Comprador" required class="form-control" style="font-size:14px" />
    </div>
    <div class="form-group">
        <input type="hidden" value="0" id="Aviso" name="Aviso" required class="form-control" style="font-size:14px" />
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Cancelar Reserva" class="btn btn-danger" style="font-size:13px" />
        <a asp-action="DetalhesJogo" asp-route-id="@Model.Id" class="btn btn-primary" style="font-size:13px">Voltar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
