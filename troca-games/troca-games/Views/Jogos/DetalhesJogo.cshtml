@model troca_games.Models.Jogo

@{
    ViewData["Title"] = "Detalhes Jogo";

    <style>
        body {
            background-color: rgb(248,248,248);
            font-family: Verdana;
        }
    </style>
}

<h1 style="font-size:30px">Detalhes do Jogo</h1>

<div style="width:350px; margin-top:20px">
    <dl class="row">
        <dt class="col-6" style="font-size:14px">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-6" style="font-size:14px">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-6" style="font-size:14px">
            @Html.DisplayNameFor(model => model.Console)
        </dt>
        <dd class="col-6" style="font-size:14px">
            @Html.DisplayFor(model => model.Console)
        </dd>
        <dt class="col-6" style="font-size:14px">
            @Html.DisplayNameFor(model => model.NegociacaoJogo)
        </dt>
        <dd class="col-6" style="font-size:14px">
            @Html.DisplayFor(model => model.NegociacaoJogo)
        </dd>
        <dt class="col-6" style="font-size:14px">
            @Html.DisplayNameFor(model => model.CondicaoJogo)
        </dt>
        <dd class="col-6" style="font-size:14px">
            @Html.DisplayFor(model => model.CondicaoJogo)
        </dd>
        <dt class="col-6" style="font-size:14px">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class="col-6" style="font-size:14px">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class="col-6" style="font-size:14px">
            @Html.DisplayNameFor(model => model.Vendedor)
        </dt>
        <dd class="col-6" style="font-size:14px">
            @Html.DisplayFor(model => model.Vendedor)
        </dd>
        <dt class="col-6" style="font-size:14px">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-6" style="font-size:14px">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-6" style="font-size:14px">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-6" style="font-size:14px">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <form asp-controller="MeusDesejos" asp-action="Adicionar">
        @if (User.IsInRole("User") & User.Identity.Name != Model.Vendedor & Model.Status == Status.Disponivel)
        {
            <input type="hidden" value="@Model.Id" id="JogoId" name="JogoId" required class="form-control" style="font-size:13px" />
            <input type="hidden" value="@User.Identity.Name" id="Usuario" name="Usuario" required class="form-control" style="font-size:13px" />
            <input type="submit" value="Adicionar a Lista Desejos" class="btn btn-danger" style="font-size:13px" />

            <a asp-controller="JogosReservados" asp-action="ReservarJogo" asp-route-id="@Model.Id" class="btn btn-success" style="font-size:13px">Reservar</a>
        }
        <a asp-action="Index" class="btn btn-primary" style="font-size:13px">Voltar</a>
    </form>
</div>