@model IEnumerable<troca_games.Models.Jogo>

@{
    ViewData["Title"] = "Jogos";
}

<h1>Jogos</h1>

<div>
    <a asp-action="Disponiveis" class="btn btn-outline-dark">Disponíveis</a>
    <a asp-action="Venda" class="btn btn-outline-dark">Comprar</a>
    <a asp-action="Aluguel" class="btn btn-outline-dark">Alugar</a>
    <a asp-action="Novos" class="btn btn-outline-dark">Novos</a>
    <a asp-action="Usados" class="btn btn-outline-dark">Usados</a>
</div>
<br />

<div class="row">
    <div class="col-md-6">
        <form class="d-flex" asp-controller="Jogos" asp-action="Index">
            <input name="searchString" class="form-control me-1" type="search" placeholder="Pesquisar Jogo" aria-label="Search">
            <a asp-action="Index" class="btn btn-danger">Cancelar</a>
        </form>
    </div>
</div>
<br />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Console)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NegociacaoJogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CondicaoJogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Console)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NegociacaoJogo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CondicaoJogo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <form asp-controller="Desejos" asp-action="Adicionar">

                        <a asp-action="DetalhesJogo" asp-route-id="@item.Id" class="btn btn-outline-secondary">Detalhes</a>

                        <input type="hidden" value="@item.Id" id="JogoId" name="JogoId" required class="form-control" />
                        <input type="hidden" value="@User.Identity.Name" id="Usuario" name="Usuario" required class="form-control" />
                        <input type="submit" value="Adicionar a Lista Desejos" class="btn btn-outline-dark" />

                        @if (item.Status == Status.Disponivel)
                        {
                            <a asp-controller="JogosReservados" asp-action="ReservarJogo" asp-route-id="@item.Id" class="btn btn-outline-success">Reservar</a>
                        }
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>