@model IEnumerable<troca_games.Models.Jogo>

@{
    ViewData["Title"] = "Jogos";

    <style>
        body {
            background-color: rgb(248,248,248);
            font-family: Verdana;
        }
    </style>
}

<h1 style="font-size:30px">Jogos</h1>

<div>
    <a asp-action="Disponiveis" class="btn btn-dark" style="font-size:14px">Disponíveis</a>
    <a asp-action="Comprar" class="btn btn-dark" style="font-size:14px">Comprar</a>
    <a asp-action="Alugar" class="btn btn-dark" style="font-size:14px">Alugar</a>
    <a asp-action="Novos" class="btn btn-dark" style="font-size:14px">Novos</a>
    <a asp-action="Usados" class="btn btn-dark" style="font-size:14px">Usados</a>
</div>

<div class="row" style="margin-top:10px">
    <div class="col-md-6">
        <form class="d-flex" asp-controller="Jogos" asp-action="Index">
            <input name="searchString" class="form-control me-1" type="search" placeholder="Pesquisar Jogo" aria-label="Search" style="background-color:whitesmoke; font-size:14px; min-width:400px">
            <a asp-action="Index" class="btn btn-danger" style="font-size:14px">Cancelar</a>
        </form>
    </div>
</div>

<table class="table" style="margin-top:10px">
    <thead>
        <tr>
            <th style="font-size:14px">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th style="font-size:14px">
                @Html.DisplayNameFor(model => model.Console)
            </th>
            <th style="font-size:14px">
                @Html.DisplayNameFor(model => model.NegociacaoJogo)
            </th>
            <th style="font-size:14px">
                @Html.DisplayNameFor(model => model.CondicaoJogo)
            </th>
            <th style="font-size:14px">
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th style="font-size:14px">
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="font-size:14px">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td style="font-size:14px">
                    @Html.DisplayFor(modelItem => item.Console)
                </td>
                <td style="font-size:14px">
                    @Html.DisplayFor(modelItem => item.NegociacaoJogo)
                </td>
                <td style="font-size:14px">
                    @Html.DisplayFor(modelItem => item.CondicaoJogo)
                </td>
                <td style="font-size:14px">
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td style="font-size:14px">
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @if (User.IsInRole("User"))
                    {
                        <a asp-action="DetalhesJogo" asp-route-id="@item.Id" class="btn btn-secondary" style="font-size:14px">Detalhes</a>
                    }

                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="DeletarJogo" asp-route-id="@item.Id" class="btn btn-danger" style="font-size:14px">Deletar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>