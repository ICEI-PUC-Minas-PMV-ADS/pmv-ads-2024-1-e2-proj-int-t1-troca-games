@model troca_games.Models.Usuario

@{
    ViewData["Title"] = "Deletar Usuário";

    <style>
        body {
            background-color: rgb(248,248,248);
            font-family: Verdana;
        }
    </style>
}

<h1 style="font-size:30px">Deletar Usuário</h1>

<h2 style="font-size:20px">Tem certeza que deseja deletar esse Usuário?</h2>

<div>
    <dl class="row" style="width:400px; margin-top:20px">
        <dt class="col-sm-5" style="font-size:14px">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-7" style="font-size:14px">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-5" style="font-size:14px">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-7" style="font-size:14px">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-5" style="font-size:14px">
            @Html.DisplayNameFor(model => model.Perfil)
        </dt>
        <dd class="col-sm-7" style="font-size:14px">
            @Html.DisplayFor(model => model.Perfil)
        </dd>
    </dl>

    <form asp-action="DeletarUsuario">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" style="font-size:14px" />
        <a asp-action="Index" class="btn btn-primary" style="font-size:14px">Voltar</a>
    </form>
</div>
