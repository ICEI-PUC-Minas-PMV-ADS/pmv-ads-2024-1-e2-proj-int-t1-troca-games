@model troca_games.Models.Usuario

@{
    ViewData["Title"] = "Login";

    <style>
        body {
            background-color: rgb(248,248,248);
            font-family: Verdana;
        }
    </style>
}

<div style="width:350px; margin:auto; margin-top:50px; padding:30px 45px; border:1px solid; border-color:gainsboro; border-radius:10px; background-color:whitesmoke">
    <h1 style="text-align:center; font-size:25px; color:dimgray">Login</h1>
    <div class="row">
        <div class="col-md-4" style="width:100%">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="margin-bottom:8px">
                    <label asp-for="Email" class="control-label" style="margin-left:4px; font-size:14px; color:dimgray"></label>
                    <input asp-for="Email" class="form-control" style="font-size:14px" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom:8px">
                    <label asp-for="Senha" class="control-label" style="margin-left:4px; font-size:14px; color:dimgray"></label>
                    <input asp-for="Senha" class="form-control" style="font-size:14px" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group" style="text-align:center">
                    <input type="submit" value="Entrar" class="btn btn-dark" style="width:60%; font-size:14px" />
                </div>
            </form>
            <br />
            <h4 style="font-size:14px; color:red; text-align:center">@ViewBag.Message</h4>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
