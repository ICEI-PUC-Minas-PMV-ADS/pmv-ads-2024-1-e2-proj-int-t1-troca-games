@model troca_games.Models.Usuario

@{
    ViewData["Title"] = "Cadastrar";

    <style>
        body {
            background-color: rgb(248,248,248);
            font-family: Verdana;
        }
    </style>
}

<div style="width:350px; margin:auto; margin-top:50px; padding:30px 45px; border:1px solid; border-color:gainsboro; border-radius:10px; background-color:whitesmoke">
    <h1 style="text-align:center; font-size:25px; color:dimgray">Cadastrar</h1>
    <div class="row">
        <div class="col-md-4" style="width:100%">
            <form asp-action="Cadastrar">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group" style="margin-bottom:8px">
                    <label asp-for="Nome" class="control-label" style="margin-left:4px; font-size:14px; color:dimgray">Usuário</label>
                    <input asp-for="Nome" class="form-control" style="font-size:14px" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div style="margin-bottom:8px; font-size:12px; text-align:justify; border:1px solid; border-color:gray; background-color:rgb(252, 245, 95); padding:10px 20px">
                    <i class="bi bi-exclamation-triangle" style="margin-right:5px"></i>O nome de Usuário não pode ser modificado após o registro!
                </div>
                <div class="form-group" style="margin-bottom:8px">
                    <label asp-for="Email" class="control-label" style="margin-left:4px; font-size:14px; color:dimgray"></label>
                    <input asp-for="Email" class="form-control" style="font-size:14px" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom:8px">
                    <label asp-for="Senha" class="control-label" style="margin-left:4px; font-size:14px; color:dimgray"></label>
                    <input asp-for="Senha" class="form-control" style="font-size:14px" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-bottom:8px">
                    <input type="hidden" value="1" id="Perfil" name="Perfil" required class="form-control" style="font-size:14px" />
                </div>
                <br />
                <div class="form-group" style="text-align:center">
                    <input type="submit" value="Cadastrar" class="btn btn-dark" style="width:60%; font-size:14px" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
