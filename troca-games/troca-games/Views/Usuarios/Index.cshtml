@model IEnumerable<troca_games.Models.Usuario>

@{
    ViewData["Title"] = "Usuários";

    <style>
        body {
            background-color: rgb(248,248,248);
            font-family: Verdana;
        }
    </style>
}

<h1 style="font-size:30px">Usuários</h1>

<table class="table" style="margin-top:10px">
    <thead>
        <tr>
            <th style="font-size:14px">
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th style="font-size:14px">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th style="font-size:14px">
                @Html.DisplayNameFor(model => model.Perfil)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="font-size:14px">
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td style="font-size:14px">
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td style="font-size:14px">
                    @Html.DisplayFor(modelItem => item.Perfil)
                </td>
                <td>
                    <a asp-action="DeletarUsuario" asp-route-id="@item.Id" class="btn btn-danger" style="font-size:14px">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
