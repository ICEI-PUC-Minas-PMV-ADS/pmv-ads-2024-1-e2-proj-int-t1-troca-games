@model IEnumerable<troca_games.Models.Desejo>

@{
    ViewData["Title"] = "Meus Desejos";

    <style>
        body {
            background-color: rgb(248,248,248);
            font-family: Verdana;
        }
    </style>
}

<h1 style="font-size:30px">Meus Desejos</h1>

<table class="table" style="margin-top:10px">
    <thead>
        <tr>
            <th>
                <p style="font-size:14px; margin:4px 0">@Html.DisplayNameFor(model => model.Jogo)</p>
            </th>
            <th>
                <p class="d-none d-md-block" style="font-size:14px; margin:4px 0">@Html.DisplayNameFor(model => model.Jogo.Console)</p>
            </th>
            <th>
                <p class="d-none d-md-block" style="font-size:14px; margin:4px 0">@Html.DisplayNameFor(model => model.Jogo.NegociacaoJogo)</p>
            </th>
            <th>
                <p class="d-none d-md-block" style="font-size:14px; margin:4px 0">@Html.DisplayNameFor(model => model.Jogo.CondicaoJogo)</p>
            </th>
            <th>
                <p class="d-none d-md-block" style="font-size:14px; margin:4px 0">@Html.DisplayNameFor(model => model.Jogo.Valor)</p>
            </th>
            <th>
                <p style="font-size:14px; margin:4px 0">@Html.DisplayNameFor(model => model.Jogo.Status)</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (User.Identity.Name == item.Usuario)
            {
                <tr>
                    <td>
                        <p style="font-size:14px; margin:4px 0">@Html.DisplayFor(modelItem => item.Jogo.Nome)</p>
                    </td>
                    <td>
                        <p class="d-none d-md-block" style="font-size:14px; margin:4px 0">@Html.DisplayFor(modelItem => item.Jogo.Console)</p>
                    </td>
                    <td>
                        <p class="d-none d-md-block" style="font-size:14px; margin:4px 0">@Html.DisplayFor(modelItem => item.Jogo.NegociacaoJogo)</p>
                    </td>
                    <td>
                        <p class="d-none d-md-block" style="font-size:14px; margin:4px 0">@Html.DisplayFor(modelItem => item.Jogo.CondicaoJogo)</p>
                    </td>
                    <td>
                        <p class="d-none d-md-block" style="font-size:14px; margin:4px 0">R$ @Html.DisplayFor(modelItem => item.Jogo.Valor)</p>
                    </td>
                    <td>
                        <p style="font-size:14px; margin:4px 0">@Html.DisplayFor(modelItem => item.Jogo.Status)</p>
                    </td>
                    <td class="d-none d-lg-block">
                        <a asp-action="DetalhesJogo" asp-route-id="@item.JogoId" class="btn btn-secondary" style="width:90px; font-size:13px">Detalhes</a>
                        <a asp-action="DeletarDesejo" asp-route-id="@item.Id" class="btn btn-danger" style="width:80px; font-size:13px">Deletar</a>
                    </td>
                    <td class="d-lg-none">
                        <a asp-action="DetalhesJogo" asp-route-id="@item.JogoId" class="btn btn-secondary" style="padding:4px 8px; font-size:16px"><i class="bi bi-file-earmark-text-fill"></i></a>
                        <a asp-action="DeletarDesejo" asp-route-id="@item.Id" class="btn btn-danger" style="padding:4px 8px; font-size:16px"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>