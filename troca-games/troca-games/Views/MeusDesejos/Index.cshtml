@model IEnumerable<troca_games.Models.Desejo>

@{
    ViewData["Title"] = "Meus Desejos";
}

<h1>Meus Desejos</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Jogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jogo.Console)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jogo.NegociacaoJogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jogo.CondicaoJogo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jogo.Valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Jogo.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            @if (User.Identity.Name == item.Usuario)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jogo.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jogo.Console)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jogo.NegociacaoJogo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jogo.CondicaoJogo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jogo.Valor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Jogo.Status)
                    </td>
                    <td>
                        <a asp-action="DetalhesJogo" asp-route-id="@item.JogoId" class="btn btn-outline-secondary">Detalhes</a>
                        <a asp-action="DeletarDesejo" asp-route-id="@item.Id" class="btn btn-outline-danger">Deletar</a>
                    </td>
                </tr>
            }

        }
    </tbody>
</table>