@model IEnumerable<troca_games.Models.Usuario>

<h1>Minha Conta</h1>

@foreach (var item in Model)
{
    @if (User.Identity?.Name == item.Nome)
    {
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nome)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.Nome)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => item.Email)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="EditarConta" asp-route-id="@item.Id" class="btn btn-dark">Editar Conta</a>
            <a asp-action="DeletarConta" asp-route-id="@item.Id" class="btn btn-danger">Deletar Conta</a>
        </div>
    }
}