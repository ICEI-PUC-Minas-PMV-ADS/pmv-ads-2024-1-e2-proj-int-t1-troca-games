@model IEnumerable<troca_games.Models.Usuario>

    @{
    ViewData["Title"] = "Usuários";
    }

    <h1>Usuários</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Perfil)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-action="Relatorio" asp-route-id="@item.Id">@item.Nome</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Perfil)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                    <a asp-action="DeletarUsuario" asp-route-id="@item.Id" class="btn btn-danger">Deletar</a>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
