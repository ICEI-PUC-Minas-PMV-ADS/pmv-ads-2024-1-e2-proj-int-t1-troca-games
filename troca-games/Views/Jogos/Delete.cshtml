@model troca_games.Models.Jogo

@{
    ViewData["Title"] = "Deletar Jogo";
}

<h1>Deletar Jogo</h1>

<h3>Tem certeza que deseja deletar esse Jogo?</h3>
<br />

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Console)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Console)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NegociacaoJogo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NegociacaoJogo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CondicaoJogo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CondicaoJogo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Valor)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
        <a asp-action="Index" class="btn btn-primary">Cancelar</a>
    </form>
</div>
