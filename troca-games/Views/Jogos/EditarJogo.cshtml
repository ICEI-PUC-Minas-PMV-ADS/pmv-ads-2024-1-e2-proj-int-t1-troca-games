@model troca_games.Models.Jogo

@{
    ViewData["Title"] = "Editar Jogo";
}

<h1>Editar Jogo</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarJogo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Console" class="control-label"></label>
                <input asp-for="Console" class="form-control" />
                <span asp-validation-for="Console" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NegociacaoJogo" class="control-label"></label>
                <select asp-for="NegociacaoJogo" class="form-control" asp-items="Html.GetEnumSelectList<NegociacaoJogo>()"></select>
                <span asp-validation-for="NegociacaoJogo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CondicaoJogo" class="control-label"></label>
                <select asp-for="CondicaoJogo" class="form-control" asp-items="Html.GetEnumSelectList<CondicaoJogo>()"></select>
                <span asp-validation-for="CondicaoJogo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Valor" class="control-label"></label>
                <input value="@Model.Valor" id="Valor" name="Valor" required class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsuarioId" class="control-label"></label>
                <select asp-for="UsuarioId" class="form-control" asp-items="ViewBag.UsuarioId"></select>
                <span asp-validation-for="UsuarioId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <a asp-action="MeusJogos" class="btn btn-primary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}